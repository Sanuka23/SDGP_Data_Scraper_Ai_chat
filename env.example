# SDGP Project Scraper Environment Configuration
# Copy this file to .env and fill in your values

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json
GOOGLE_CLOUD_PROJECT=your-project-id

# Optional: Customize scraping behavior
SCRAPER_DELAY=1.0  # Delay between requests (seconds)
SCRAPER_TIMEOUT=30  # Request timeout (seconds)
SCRAPER_MAX_RETRIES=3  # Maximum retry attempts

# Optional: AI Configuration
AI_MODEL_NAME=gemini-2.0-flash-exp  # AI model to use
AI_CACHE_ENABLED=true  # Enable/disable AI response caching
AI_CACHE_EXPIRY=86400  # Cache expiry time in seconds (24 hours)

# Optional: Output Configuration
OUTPUT_DIR=output  # Directory for output files
LOG_LEVEL=INFO  # Logging level (DEBUG, INFO, WARNING, ERROR) 